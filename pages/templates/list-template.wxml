<template name="list-template">
  <view class="tmpContainer">
    <view class="tmp_avatar_date">
      <image src="{{avatar}}"></image>
      <text>{{date}}</text>
    </view>
    <text class="title">{{title}}</text>
    <image class="tmp_img" src="{{detail_img}}"></image>
    <text class="tmp_content">{{detail_content}}</text>
    <view class="tmp_love_attention">
      <image src="{{detail_love_image1}}"></image>
      <text>{{love_count}}</text>
      <image src="{{detail_love_image2}}"></image>
      <text>{{attention_count}}</text>
    </view>
  </view>
</template>
.tmpContainer {
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  margin-top: 10rpx;
  padding:10rpx 0;
}

.tmp_avatar_date{
  margin:20rpx 0 20rpx 20rpx;
}

.tmp_avatar_date image{
  width: 60rpx;
  height:60rpx;
  vertical-align: middle;
}

.tmp_avatar_date text {
  font-size: 13px;
  margin-left: 20rpx;
  vertical-align: middle;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-left: 20rpx;
}

.tmp_img {
  width:100%;
  height:340rpx;
  margin:10rpx 0;
}

.tmp_content {
  font-size: 30rpx;
  color: #666;
  letter-spacing: 2px;
  text-indent: 20px;
}

.tmp_love_attention image {
  width:40rpx;
  height:40rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.tmp_love_attention text {
  font-size: 14px;
  vertical-align: middle;
  color: #666;
  margin-left: 20rpx;
}